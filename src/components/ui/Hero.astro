---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  backgroundClass?: string;
}

const {
  title,
  subtitle,
  ctaText,
  ctaLink,
  secondaryCtaText,
  secondaryCtaLink,
  backgroundClass = 'bg-gradient-to-br from-[#032552] to-[#066aab]'
} = Astro.props;
---

<section class={`${backgroundClass} text-white py-20 md:py-32`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
        {title}
      </h1>
      {subtitle && (
        <p class="text-xl md:text-2xl text-blue-100 mb-8 leading-relaxed">
          {subtitle}
        </p>
      )}
      {(ctaText || secondaryCtaText) && (
        <div class="flex flex-col sm:flex-row gap-4">
          {ctaText && ctaLink && (
            <a
              href={ctaLink}
              class="inline-block px-8 py-4 bg-white text-[#032552] font-semibold rounded-lg hover:bg-blue-50 transition-all duration-200 transform hover:scale-105 shadow-lg text-center"
            >
              {ctaText}
            </a>
          )}
          {secondaryCtaText && secondaryCtaLink && (
            <a
              href={secondaryCtaLink}
              class="inline-block px-8 py-4 bg-transparent border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-[#032552] transition-all duration-200 text-center"
            >
              {secondaryCtaText}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
