---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  quality?: number;
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  loading = 'lazy',
  quality = 80
} = Astro.props;

// Check if it's a local import or a URL
const isLocalImage = typeof src !== 'string';
---

{isLocalImage ? (
  <Image
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={loading}
    quality={quality}
    format="webp"
  />
) : (
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={loading}
  />
)}
