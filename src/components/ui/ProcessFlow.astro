---
interface Step {
  number: number;
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  steps: Step[];
  title?: string;
  subtitle?: string;
}

const { steps, title = 'How It Works', subtitle } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">{title}</h2>
      {subtitle && (
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{subtitle}</p>
      )}
    </div>

    <div class="grid md:grid-cols-3 gap-8 md:gap-6 relative">
      <!-- Connecting Lines (desktop only) -->
      <div class="hidden md:block absolute top-16 left-0 right-0 h-0.5 bg-gradient-to-r from-[#2eabe0] via-[#2eabe0] to-[#2eabe0] opacity-20" style="top: 3rem; left: 16.666%; right: 16.666%;"></div>

      {steps.map((step, index) => (
        <div class="relative">
          <div class="flex flex-col items-center text-center">
            <!-- Step Number Circle -->
            <div class="w-24 h-24 rounded-full bg-gradient-to-br from-[#032552] to-[#2eabe0] flex items-center justify-center mb-6 shadow-lg relative z-10">
              <span class="text-3xl font-bold text-white">{step.number}</span>
            </div>

            <!-- Step Content -->
            <h3 class="text-xl font-bold mb-3 text-gray-900">{step.title}</h3>
            <p class="text-gray-600 leading-relaxed">{step.description}</p>
          </div>

          {/* Arrow for mobile */}
          {index < steps.length - 1 && (
            <div class="md:hidden flex justify-center my-6">
              <svg class="w-8 h-8 text-[#2eabe0]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
