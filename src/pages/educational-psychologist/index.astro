---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/ui/Hero.astro";
import Card from "../../components/ui/Card.astro";
import Testimonial from "../../components/ui/Testimonial.astro";
import ContactForm from "../../components/forms/ContactForm.astro";

const page_data = {
  title: "Educational Psychology Services",
  subtitle:
    "HCPC-registered educational psychologists for EHCPs, assessments, and SEND support. Statutory timescales met. Nationwide coverage.",
};

const stats = [
  { number: "1,000+", label: "HCPC-Registered EPs" },
  { number: "24h", label: "CV Turnaround" },
  { number: "100+", label: "LAs and MATs Served" },
  { number: "100%", label: "Quality-Checked Reports" },
];

const features = [
  {
    title: "CVs in 24 Hours",
    description:
      "Fast expert matching for urgent SEND cases including tribunal pressures.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  {
    title: "HCPC-Registered EPs",
    description:
      "All our Educational Psychologists are fully registered with HCPC.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  {
    title: "20-Week EHCP Compliance",
    description:
      "Our EPs understand statutory timescales and work to meet them.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
  },
  {
    title: "Flexible Capacity",
    description:
      "One-off assessments to ongoing block contracts for MATs and LAs.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />`,
  },
  {
    title: "School-Based Support",
    description:
      "Whole-school SEND reviews, staff training, and consultation services.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`,
  },
  {
    title: "100% Quality-Checked",
    description: "All reports peer-reviewed before submission.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
  },
];

const services = [
  {
    title: "What We Provide",
    items: [
      "EHCP statutory assessments",
      "Specialist assessments (autism, dyslexia)",
      "Whole-school SEND reviews",
      "Staff training and CPD",
      "Consultation and problem-solving",
      "Tribunal support",
    ],
  },
  {
    title: "How We Help",
    items: [
      "Nationwide coverage across England and Wales",
      "Enhanced DBS clearance",
      "Understanding of statutory timescales",
      "Block contracts for ongoing support",
      "Fast-track options for urgent cases",
      "Clear, accessible reports for families and schools",
    ],
  },
];

const testimonials = [
  {
    quote:
      "Psychology Direct helped us meet our EHCP deadlines when our in-house EP was off sick. Professional, reliable, and child-focused.",
    author: "SENCO",
    role: "Coordinator",
    company: "Multi-Academy Trust",
  },
  {
    quote:
      "We use Psychology Direct to manage demand peaks. Their EPs understand the 20-week timescale and deliver quality reports consistently.",
    author: "LA SEND Manager",
    role: "Manager",
    company: "London Borough",
  },
  {
    quote:
      "Excellent autism assessment for one of our pupils. The EP was sensitive, thorough, and provided practical recommendations for school.",
    author: "Primary School Head",
    role: "Headteacher",
    company: "Manchester",
  },
];
---

<Layout
  title={`${page_data.title} | Psychology Direct`}
  description={page_data.subtitle}
>
  <Hero
    title={page_data.title}
    subtitle={page_data.subtitle}
    ctaText="Get Expert CVs in 24h"
    ctaLink="#contact"
    secondaryCtaText="Call 01306 879 975"
    secondaryCtaLink="tel:01306879975"
  />

  <!-- Stats Section -->
  <section class="py-16 bg-linear-to-br from-[#032552] to-[#066aab] text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-4 gap-8 text-center">
        {
          stats.map((stat) => (
            <div>
              <div class="text-4xl md:text-5xl font-bold mb-2">
                {stat.number}
              </div>
              <div class="text-blue-100">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Key Features -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">
          Why Choose Psychology Direct
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Fast, reliable educational psychology services for schools and local
          authorities.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {
          features.map((feature) => (
            <Card
              title={feature.title}
              icon={`<svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">${feature.icon}</svg>`}
              variant="elevated"
            >
              <p>{feature.description}</p>
            </Card>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12">
        {
          services.map((service) => (
            <div>
              <h3 class="text-2xl font-bold mb-6 text-gray-900">
                {service.title}
              </h3>
              <ul class="space-y-3">
                {service.items.map((item) => (
                  <li class="flex items-start gap-3">
                    <svg
                      class="w-6 h-6 text-[#2eabe0] shrink-0 mt-0.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span class="text-gray-700">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <Testimonial testimonials={testimonials} title="What Schools and LAs Say" />

  <div id="contact">
    <ContactForm title="Get Expert CVs in 24h" variant="education" />
  </div>
</Layout>
