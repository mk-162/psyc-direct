---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/ui/Hero.astro";
import Card from "../../components/ui/Card.astro";
import Testimonial from "../../components/ui/Testimonial.astro";
import ContactForm from "../../components/forms/ContactForm.astro";

const page_data = {
  title: "Family Law Expert Witness Psychologists",
  subtitle:
    "Court-ready parenting assessments for family law. HCPC-registered psychologists who understand care proceedings and contact disputes.",
};

const stats = [
  { number: "1,000+", label: "HCPC-Registered Psychologists" },
  { number: "24h", label: "CV Turnaround" },
  { number: "15+", label: "Years Supporting Family Courts" },
  { number: "100%", label: "Quality-Checked Reports" },
];

const features = [
  {
    title: "CVs in 24 Hours",
    description:
      "Fast expert matching for urgent family law cases including emergency care proceedings.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  {
    title: "HCPC-Registered Experts",
    description:
      "All our psychologists are fully registered with the Health and Care Professions Council.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  {
    title: "Legal Aid Rates Accepted",
    description:
      "We work at Legal Aid Agency rates for public law care proceedings.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />`,
  },
  {
    title: "26-Week Compliance",
    description:
      "Our experts understand statutory timescales and work to meet court deadlines.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
  },
  {
    title: "Child-Friendly Assessment",
    description:
      "Trauma-informed approaches for sensitive family law cases involving children.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  {
    title: "Court-Ready Reports",
    description:
      "Professional reports that withstand cross-examination and meet judicial standards.",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
  },
];

const services = [
  {
    title: "What We Assess",
    items: [
      "Care proceedings and child protection",
      "Contact disputes and residence orders",
      "Special Guardianship Orders",
      "Parental alienation assessments",
      "Domestic abuse allegations",
      "Child's wishes and feelings",
    ],
  },
  {
    title: "How We Help",
    items: [
      "Home visits to observe parent-child interactions",
      "Comprehensive psychological testing",
      "Independent expert opinions",
      "Court attendance when required",
      "Fast turnaround for urgent cases",
      "Clear, accessible reports for families and courts",
    ],
  },
];

const testimonials = [
  {
    quote:
      "The psychologist provided was excellent - thorough, objective, and understood the 26-week timescale pressures we were under.",
    author: "Family Law Solicitor",
    role: "Partner",
    company: "London",
  },
  {
    quote:
      "Psychology Direct matched us with the perfect expert for a complex parental alienation case. Report quality was outstanding.",
    author: "Legal Aid Practitioner",
    role: "Solicitor",
    company: "Manchester",
  },
  {
    quote:
      "We've used Psychology Direct for multiple care proceedings. CVs within 24 hours every time, and experts who really understand family law.",
    author: "Care Proceedings Team",
    role: "Head of Department",
    company: "Birmingham",
  },
];
---

<Layout
  title={`${page_data.title} | Psychology Direct`}
  description={page_data.subtitle}
>
  <Hero
    title={page_data.title}
    subtitle={page_data.subtitle}
    ctaText="Get Expert CVs in 24h"
    ctaLink="#contact"
    secondaryCtaText="Call 01306 879 975"
    secondaryCtaLink="tel:01306879975"
  />

  <!-- Stats Section -->
  <section class="py-16 bg-linear-to-br from-[#032552] to-[#066aab] text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-4 gap-8 text-center">
        {
          stats.map((stat) => (
            <div>
              <div class="text-4xl md:text-5xl font-bold mb-2">
                {stat.number}
              </div>
              <div class="text-blue-100">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Key Features -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">
          Why Choose Psychology Direct
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Fast, reliable expert witness services for family law proceedings.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {
          features.map((feature) => (
            <Card
              title={feature.title}
              icon={`<svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">${feature.icon}</svg>`}
              variant="elevated"
            >
              <p>{feature.description}</p>
            </Card>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12">
        {
          services.map((service) => (
            <div>
              <h3 class="text-2xl font-bold mb-6 text-gray-900">
                {service.title}
              </h3>
              <ul class="space-y-3">
                {service.items.map((item) => (
                  <li class="flex items-start gap-3">
                    <svg
                      class="w-6 h-6 text-[#2eabe0] shrink-0 mt-0.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span class="text-gray-700">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <Testimonial testimonials={testimonials} title="What Solicitors Say" />

  <div id="contact">
    <ContactForm title="Get Expert CVs in 24h" variant="expert-witness" />
  </div>
</Layout>
