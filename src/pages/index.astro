      </div>
      <Tabs tabs={tabs} />
    </div>
  </section>

  <!-- Process Flow -->
  <ProcessFlow
    steps={processSteps}
    title="How We Work"
    subtitle="Our streamlined three-step process ensures quality, efficiency, and peace of mind"
  />

  <!-- Statistics -->
  <section class="py-16 bg-gradient-to-br from-[#032552] to-[#066aab] text-white">
