---
import Layout from '../layouts/Layout.astro';

export const prerender = true;
---

<Layout title="Page Not Found | Psychology Direct">
  <div class="min-h-screen bg-white flex items-center justify-center px-4 py-20">
    <div class="max-w-4xl w-full">
      <div class="text-center mb-16">
        <!-- Subtle decorative element -->
        <div class="inline-block mb-8 relative">
          <div class="absolute inset-0 bg-gradient-to-r from-[#032552]/5 to-[#2eabe0]/5 blur-3xl"></div>
          <h1 class="relative text-[140px] md:text-[180px] font-extralight tracking-tight text-gray-900 leading-none">
            404
          </h1>
        </div>

        <h2 class="text-2xl md:text-3xl font-light text-gray-900 mb-4 tracking-tight">
          We can't find that page
        </h2>
        <p class="text-gray-500 max-w-md mx-auto font-light">
          The page you're looking for may have been moved or no longer exists.
        </p>
      </div>

      <!-- Navigation cards - more spacious and elegant -->
      <div class="max-w-3xl mx-auto mb-20">
        <div class="grid md:grid-cols-3 gap-6">
          <a
            href="/"
            class="group relative overflow-hidden bg-white border border-gray-200 rounded-xl p-8 hover:border-[#2eabe0] transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
          >
            <div class="absolute inset-0 bg-gradient-to-br from-[#032552]/0 to-[#2eabe0]/0 group-hover:from-[#032552]/5 group-hover:to-[#2eabe0]/5 transition-all duration-300"></div>
            <div class="relative">
              <div class="w-12 h-12 mb-6 rounded-lg bg-gradient-to-br from-[#032552] to-[#066aab] flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Home</h3>
              <p class="text-sm text-gray-500 font-light">Return to homepage</p>
            </div>
          </a>

          <a
            href="/expert-witness-psychologists"
            class="group relative overflow-hidden bg-white border border-gray-200 rounded-xl p-8 hover:border-[#2eabe0] transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
          >
            <div class="absolute inset-0 bg-gradient-to-br from-[#032552]/0 to-[#2eabe0]/0 group-hover:from-[#032552]/5 group-hover:to-[#2eabe0]/5 transition-all duration-300"></div>
            <div class="relative">
              <div class="w-12 h-12 mb-6 rounded-lg bg-gradient-to-br from-[#066aab] to-[#2eabe0] flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Psychology</h3>
              <p class="text-sm text-gray-500 font-light">Expert services</p>
            </div>
          </a>

          <a
            href="/contact"
            class="group relative overflow-hidden bg-white border border-gray-200 rounded-xl p-8 hover:border-[#2eabe0] transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
          >
            <div class="absolute inset-0 bg-gradient-to-br from-[#032552]/0 to-[#2eabe0]/0 group-hover:from-[#032552]/5 group-hover:to-[#2eabe0]/5 transition-all duration-300"></div>
            <div class="relative">
              <div class="w-12 h-12 mb-6 rounded-lg bg-gradient-to-br from-[#2eabe0] to-[#066aab] flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Contact</h3>
              <p class="text-sm text-gray-500 font-light">Get in touch</p>
            </div>
          </a>
        </div>
      </div>

      <!-- Subtle call to action -->
      <div class="text-center">
        <div class="inline-flex items-center gap-3 text-sm text-gray-500">
          <span class="font-light">Need immediate assistance?</span>
          <a
            href="tel:01306879975"
            class="inline-flex items-center gap-2 text-[#032552] hover:text-[#2eabe0] font-medium transition-colors group"
          >
            <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            01306 879 975
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
